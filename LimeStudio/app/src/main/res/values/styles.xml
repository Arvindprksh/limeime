<resources>

    <style name="LIMEAlertDialogTheme" parent="@android:style/Theme.Dialog">
        </style>
    <style name="LIMEKeyboardLight">
        <item name="spaceKeyIcon">@drawable/sym_keyboard_space</item>
        <item name="spaceKeyPreviewIcon">@drawable/sym_keyboard_space</item>
        <item name="enterKeyIcon">@drawable/sym_keyboard_return</item>
        <item name="enterKeyPreviewIcon">@drawable/sym_keyboard_return</item>
        <item name="searchKeyIcon">@drawable/sym_keyboard_search</item>
        <item name="searchKeyPreviewIcon">@drawable/sym_keyboard_search</item>
        <item name="spacebarVerticalCorrection">@dimen/spacebar_vertical_correction</item>
        <item name="spacebarSlidingTextSize">@dimen/spacebar_preview_text_size</item>
        <item name="spacebarSlidingLeftArrow">@drawable/ic_suggest_strip_scroll_left_arrow</item>
        <item name="spacebarSlidingRightArrow">@drawable/ic_suggest_strip_scroll_right_arrow</item>

    </style>
    <style name="LIMEKeyboardDark">
        <item name="spaceKeyIcon">@drawable/sym_keyboard_space</item>
        <item name="spaceKeyPreviewIcon">@drawable/sym_keyboard_space</item>
        <item name="enterKeyIcon">@drawable/sym_keyboard_return</item>
        <item name="enterKeyPreviewIcon">@drawable/sym_keyboard_return</item>
        <item name="searchKeyIcon">@drawable/sym_keyboard_search</item>
        <item name="searchKeyPreviewIcon">@drawable/sym_keyboard_search</item>
        <item name="spacebarVerticalCorrection">@dimen/spacebar_vertical_correction</item>
        <item name="spacebarSlidingTextSize">@dimen/spacebar_preview_text_size</item>
        <item name="spacebarSlidingLeftArrow">@drawable/ic_suggest_strip_scroll_left_arrow</item>
        <item name="spacebarSlidingRightArrow">@drawable/ic_suggest_strip_scroll_right_arrow</item>

    </style>
    <style name="LIMEKeyboardViewLayoutLight">
        <item name="android:background">@drawable/keyboard_background</item>
        <item name="android:keyBackground">@drawable/btn_keyboard_key</item>
    </style>
    <style name="LIMEKeyboardViewLayoutDark">
        <item name="android:background">@drawable/keyboard_background_dark</item>
        <item name="android:keyBackground">@drawable/btn_keyboard_key_dark</item>
    </style>
    <style name="LIMEKeyboardBaseView">
        <item name="keyPreviewLayout">@layout/key_preview</item>
        <item name="keyPreviewOffset">@dimen/key_preview_offset</item>
        <item name="keyPreviewHeight">@dimen/key_preview_height</item>
        <item name="labelTextSize">@dimen/label_text_size</item>
        <item name="subLabelTextSize">@dimen/sub_label_text_size</item>
        <item name="smallLabelTextSize">@dimen/small_label_text_size</item>
        <item name="popupLayout">@layout/keyboard_popup</item>
        <item name="popupHint">@drawable/hint_popup</item>
        <item name="keyHysteresisDistance">@dimen/key_hysteresis_distance</item>
        <item name="verticalCorrection">@dimen/keyboard_vertical_correction</item>
        <item name="shadowColor">#BB000000</item>
        <item name="shadowRadius">0</item>
        <item name="backgroundDimAmount">0.5</item>
        <item name="symbolColorScheme">white</item>
    </style>
    <style name="LIMEKeyboardBaseView.Light">
        <item name="android:background">@drawable/keyboard_background</item>
        <item name="keyBackground">@drawable/btn_keyboard_key</item>
        <item name="keyTextSize">@dimen/key_text_size</item>

        <item name="keyTextColorNormal">@color/limekeyboard_key_color_light</item>
        <item name="keyTextColorPressed">@color/limekeyboard_key_color_light_hl</item>

        <item name="functionKeyTextColorNormal">@color/limekeyboard_function_key_color_light</item>
        <item name="functionKeyTextColorPressed">@color/limekeyboard_function_key_color_light_hl</item>

        <item name="keySubLabelTextColorNormal">@color/limekeyboard_subkey_color_light</item>
        <item name="keySubLabelTextColorPressed">@color/limekeyboard_subkey_color_light_hl</item>

    </style>

    <style name="LIMEKeyboardBaseView.Dark">
        <item name="android:background">@drawable/keyboard_background_dark</item>
        <item name="keyBackground">@drawable/btn_keyboard_key_dark</item>
        <item name="keyTextSize">@dimen/key_text_size</item>

        <item name="keyTextColorNormal">@color/limekeyboard_key_color_dark</item>
        <item name="keyTextColorPressed">@color/limekeyboard_key_color_dark_hl</item>

        <item name="functionKeyTextColorNormal">@color/limekeyboard_function_key_color_dark</item>
        <item name="functionKeyTextColorPressed">@color/limekeyboard_function_key_color_dark_hl</item>

        <item name="keySubLabelTextColorNormal">@color/limekeyboard_subkey_color_dark</item>
        <item name="keySubLabelTextColorPressed">@color/limekeyboard_subkey_color_dark_hl</item>
    </style>

    <style name="KeyPreviewAnimation">
        <item name="android:windowEnterAnimation">@anim/key_preview_fadein</item>
        <item name="android:windowExitAnimation">@anim/key_preview_fadeout</item>
    </style>
    <style name="MiniKeyboardAnimation">
        <item name="android:windowEnterAnimation">@anim/mini_keyboard_fadein</item>
        <item name="android:windowExitAnimation">@anim/mini_keyboard_fadeout</item>
    </style>

    <style name="LIMEBaseKeyboardLight">

        <item name="drawableArrowUp">@drawable/sym_keyboard_up</item>
        <item name="drawableArrowDown">@drawable/sym_keyboard_down</item>
        <item name="drawableArrowRight">@drawable/sym_keyboard_right</item>
        <item name="drawableArrowLeft">@drawable/sym_keyboard_left</item>
    </style>

    <style name="Theme.AppCompat.Transparent" parent="@style/Theme.AppCompat.Light">
        <item name="android:windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

</resources>
